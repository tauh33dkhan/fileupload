<!DOCTYPE html>
<html>

<head>
    <%- include ('includes/header.ejs') %>
</head>

<body>
    <%- include ('includes/navigation.ejs') %>

    <div class='container' style='min-height: 450px'>
        <h2>Hi <%=username%>!</h2>
        <br>
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Profile Picture</h5>
                        <p class="card-text"><img src="/uploads/<%=profilePic%>" height="250px" width="250px"></p>
                        <p class="card-text">
                        <form ref='uploadForm' id='uploadForm' action='/upload' method='post'
                            encType='multipart/form-data'><input type='file' name='profilePic' /><input type='submit'
                                value='Upload!'/>
                            <p style="font-size: 10px;">Only .png, .jpg, .jpeg files are allowed </p></form>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <br>
</body>

</html>